  <button type="submit">Select file</button>
</form>

<form action="/upload-assignments" method="post" enctype="multipart/form-data">
  <label for="assignmentsFile">Teaching Assignments</label>
  <input type="file" id="assignmentsFile" name="assignmentsFile" accept=".xlsx" required>
  <button type="submit">Select file</button>
</form>

<button id="automationCreateButton">Automation Create</button>

<!-- Possibly some JavaScript to handle the Automation Create button click event -->
<script>
  document.getElementById('automationCreateButton').addEventListener('click', function() {
    // Call the appropriate route for automation creation
    fetch('/create-automation', { method: 'POST' })
      .then(response => {
        if (response.ok) {
          return response.json();
        }
        throw new Error('Network response was not ok.');
      })
      .then(data => {
        console.log(data.message);
        // Handle success
      })
      .catch(error => {
        console.error('There has been a problem with your fetch operation:', error);
        // Handle failure
      });
  });
</script>
